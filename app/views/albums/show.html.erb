<% @title = "#{@band.name.capitalize}'s #{@album.title}" %>
<% album_type = @album.studio ? 'Studio' : 'Live' %>

<h1><%= @band.name.capitalize %>: <%= @album.title %> (<%= album_type %>)</h1>

<%= link_to "<< Back to #{@band.name.capitalize}", band_url(@band), class: "back-link" %>

<div class="center-right">
    <%= link_to 'Update Album', edit_album_url(@album), class: 'link-btn' %>
    <%= button_to 'Delete Album', album_url(@album), method: :delete, class: 'delete-btn' %>
</div>

<div class="albums">
    <% unless @tracks.empty? %>
        <% @tracks.each do |track| %>
            <%= link_to track.title, track_url(track), class: 'band-btn' %>
        <% end %>
    <% else %>
        <p>No tracks added for this artist yet.</p>
    <% end %>
</div>

<div class="right">
    <%= link_to 'Add Track', new_album_track_url(@album), class: 'link-btn' %>
</div>